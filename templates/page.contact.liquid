<div class="pages mb40">
	<div class="container">
		<div class="row clearfix">
			{%include 'breadcrumb'%}
			<div class="col-xs-12 ">
				<h1 class="page-title">{{ page.title }}</h1>
				{%if settings.google_map_limit == 2%}
				{% if settings.show_google_maps%}
				<div class="text-center maps col-md-6 col-xs-12">
					{{ settings.google_maps_code }}
				</div>
				<div class="text-center maps col-md-6 col-xs-12">
					{{ settings.google_maps_code_2 }}
				</div>
				{%endif%}
				{% else %}
				{% if settings.show_google_maps%}
				<div class="text-center maps col-md-12 col-xs-12">
					{{ settings.google_maps_code }}
				</div>
				{% endif %}
				{% endif %}

				<div class="row">
					<div class="col-xs-12 col-sm-7">
						<h3>{{settings.contact_nhanxet_title}}</h3>
						<hr class="line-left"/>
						<p>
							{{settings.contact_nhanxet_content}}
						</p>
						{% form 'contact' %}
						{% if form.posted_successfully? %}
						<div class="alert alert-success">
							Cám ơn đã liên hệ chúng tôi. Chúng tôi sẽ liên hệ sớm nhất có thể.
						</div>
						{% endif %}


						<div class="form-group">
							<label for="contactFormName" class="sr-only">Họ Tên</label>
							<input required type="text" id="contactFormName" class="form-control" name="contact[name]" placeholder="Your full name" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
						</div>
						<div class="form-group">
							<label for="contactFormEmail" class="sr-only">Email</label>
							<input required type="email" name="contact[email]" placeholder="Your email address" id="contactFormEmail" class="form-control" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
						</div>
						<div class="form-group">
							<label for="contactFormMessage" class="sr-only">Nội dung</label>
							<textarea required rows="6" name="contact[body]" class="form-control" placeholder="Write comment" id="contactFormMessage">{% if form.body %}{{ form.body }}{% endif %}</textarea>
						</div>

						<input type="submit" class="btn-register" value="Send" />

						{% endform %}

					</div>
					<div class="col-xs-12 col-sm-5">
						<h3>{{settings.contact_title}}</h3>
						<hr class="line-right"/>
						<h3 class="name-company">{{settings.contact_company}}</h3>
						<p>	{{settings.contact_slogan}}	</p>
						<ul class="info-address">
							<li>
								<i class="glyphicon glyphicon-map-marker"></i>
								<span>{{settings.contact_address}}</span>
							</li>
							<li>
								<i class="glyphicon glyphicon-phone-alt"></i> 
								<span>{{settings.contact_phone}}</span>
							</li>
							<li>
								<i class="glyphicon glyphicon-envelope"></i>
								<span>{{settings.contact_email}}</span>
							</li>
						</ul>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>
