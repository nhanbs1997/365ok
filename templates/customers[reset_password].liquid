<div class="container">
	<div  class="customer-layout" id="layout-page">
		<h1>Phục hồi mật khẩu</h1>
		<div id="customer-login">
			<div id="login" class="userbox">
				{% form 'reset_customer_password' %}
				<div class="border">
					{{ form.errors | default_errors }}
					<div class="clearfix large_form">
						<label for="customer_password">Mật khẩu</label>
						<input required type="password" value="" name="customer[password]" id="customer_password" placeholder="Mật khẩu" class="text" size="16" />      
					</div>
					<div class="clearfix large_form">
						<label for="customer_password">Xác nhận mật khẩu</label>
						<input required type="password" value="" name="customer[password_confirmation]" id="customer_password" placeholder="Xác nhận mật khẩu" class="text" size="16" />      
					</div>

					<div class="action_bottom">
						<input class="btn btn-signin" type="submit" value="Lưu" />
					</div>
				</div>
				{% endform %}
			</div>

		</div>
	</div>
</div>