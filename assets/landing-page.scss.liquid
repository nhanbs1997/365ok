@media only screen and (max-width: 1024px){
	.landing-page{
		iframe{
			width: 100%;
		}
	}
	.landing-page .line-dat-hang-ngay{
		width: 100%;
	}
}

@media only screen and (max-width: 767px){
	.anh-thong-tin-wrap-2{
		.anh-thong-tin-wrap{
			order: -1;
		}
	}
	.landing-page .mo-ta-ngan-bao-hanh{
		width: 100%;
	}
	.landing-page .mo-ta-dai-bao-hanh{
		margin-left: 0;
	}
	.landing-page .owl-thu-vien-hinh-anh .owl-dots{
		flex-wrap: wrap;
	}
	.landing-page .owl-thu-vien-hinh-anh .owl-dots .owl-dot{
		width: 25%;
	}
	.landing-page .owl-thu-vien-hinh-anh .owl-dots .owl-dot span{
		margin: 5px 0px 0 2px;
		width: calc(100% - 4px);
	}
	.landing-page .dien-thong-tin .description{
		padding: 0;
	}
	.landing-page .dien-thong-tin .form-control,.landing-page .dien-thong-tin .btn-register{
		width: 100%;
	}
}

