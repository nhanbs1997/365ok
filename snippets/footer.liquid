{%include 'index-commit'%}
<footer>
	<!--<a href="javascript:void(0)" class="banner-footer visible-xs">
<img src="{{ 'app-install-banner.png' | asset_url }}">
</a>-->

	<div class="footer-top">
		<div class="container">
			{%if settings.footer_text_top_show%}
			<div class="footer-text-top">
				<p>{{settings.footer_text_top}}</p>
			</div>
			{%endif%}
			<div class="row">

				<div class="col-xs-12 col-sm-12 col-md-3 visible-xs">

					<div class="footer-col">
						<h4 class="footer-title footer-title-1">Thông tin liên lạc</h4>
						<div class="footer-contact-us">
							<div class="footer-contact-us-email footer-contact-flex">
								<span class="ic-bef ic-socl-email ic-solid"></span>
								<a href="mailto:{{ settings.header-email }}"><span>{{ settings.header-email }}</span></a>
							</div>
							<div class="footer-contact-us-phone footer-contact-flex">
								<span class="ic-bef ic-socl-phone ic-solid"></span>
								<a href="tel:+{{ settings.header-phone | replace: ' ', '' }}"><span>+{{ settings.header-phone }}</span></a>
								<span class="call-only" style="margin-left: 5px; font-size: 12px; color: #ababab">(Chỉ gọi)</span>
							</div>
							<div class="footer-contact-us-hour">
								<span class="circle" style="margin-left: 3px; margin-right: 9px"></span><span>Giờ mở cửa: </span><span>{{settings.footer_col1_content}}</span>
							</div>
						</div>
						<h4 class="footer-title  footer-title-1">Địa chỉ</h4>
						<div class="footer-contact-us-address footer-contact-flex">
							<span class="ic-bef ic-site-pin ic-solid"></span><span>{{settings.footer_col1_add}}</span>
						</div>
					</div>

				</div>
				<div class="col-xs-12 col-sm-12 col-md-3 hidden-xs">
					{%if settings.footer_col1_show%}
					<div class="footer-col">
						<h4 class="footer-title">{{settings.footer_col1_title}}</h4>
						<div class="footer-content">
							{{settings.footer_col1_content}}
						</div>
						{%unless settings.footer_col1_email == ''%}
						<div class="footer-address clearfix">
							<span><i class="fa fa-envelope"></i></span>
							<p><a href="mailto:{{settings.footer_col1_email}}">{{settings.footer_col1_email}}</a></p>
						</div>
						{%endunless%}
						{%unless settings.footer_col1_hotline == ''%}
						<div class="footer-address clearfix">
							<span><i class="fa fa-phone"></i></span>
							<p><a href="tel:{{settings.footer_col1_hotline}}">{{settings.footer_col1_hotline}}</a></p>
						</div>
						{%endunless%}
						{%unless settings.footer_col1_add == ''%}
						<div class="footer-address clearfix">
							<span><i class="fa fa-map-marker"></i></span>
							<p>{{settings.footer_col1_add}}</p>
						</div>
						{%endunless%}
					</div>
					{%endif%}
				</div>
				<div class="col-xs-12 col-sm-12 col-md-6">
					<div class="clearfix">
						{%if settings.footer_col2_show%}
						<div class="footer-col2">
							<h4 class="footer-title" data-toggle="collapse" data-target="#{{settings.footer_col2_title | handleize }}">{{settings.footer_col2_title}}</h4>
							<div class="footer-menu" id="{{settings.footer_col2_title | handleize }}" class="collapse">
								<ul>
									{%for link in linklists[settings.footer_col2_menu].links%}
									<li><a href="{{link.url}}">{{link.title}}</a></li>
									{%endfor%}
								</ul>
							</div>
						</div>
						{%endif%}
						{%if settings.footer_col3_show%}
						<div class="footer-col2">
							<h4 class="footer-title collapsed" data-toggle="collapse" data-target="#{{settings.footer_col3_title | handleize }}">{{settings.footer_col3_title}}</h4>
							<div class="footer-menu collapse" id="{{settings.footer_col3_title | handleize }}" class="collapse">
								<ul>
									{%for link in linklists[settings.footer_col3_menu].links%}
									<li><a href="{{link.url}}">{{link.title}}</a></li>
									{%endfor%}
								</ul>
							</div>
						</div>
						{%endif%}
						{%if settings.footer_col4_show%}
						<div class="footer-col2">
							<h4 class="footer-title footer-title-mobile" data-toggle="collapse" data-target="#{{settings.footer_col4_title | handleize }}">{{settings.footer_col4_title}}</h4>
							<div class="footer-menu collapse" id="{{settings.footer_col4_title | handleize }}" class="collapse">
								<ul>
									{%for link in linklists[settings.footer_col4_menu].links%}
									<li><a href="{{link.url}}">{{link.title}}</a></li>
									{%endfor%}
								</ul>
							</div>
							<h4 class="footer-title" data-toggle="collapse" data-target="#{{settings.footer_col4_title_2 | handleize }}">{{settings.footer_col4_title_2}}</h4>
							<div class="footer-menu collapse" id="{{settings.footer_col4_title_2 | handleize }}" class="collapse">
								<ul>
									{%for link in linklists[settings.footer_col4_menu_2].links%}
									<li><a href="{{link.url}}">{{link.title}}</a></li>
									{%endfor%}
								</ul>
							</div>
						</div>
						{%endif%}
					</div>
				</div>
				<div class="col-xs-12 col-sm-12 col-md-3">
					{%if settings.use_newsletter%}
					<div class="newsletter text-center">
						<p class="title-top newsletter__title">{{settings.newsletter_title}}</p>
						{% form 'customer' %}
						{{ form.errors | default_errors }}
						<input type="hidden" id="contact_tags" name="contact[tags]" value="khách hàng tiềm năng, nhận thông báo" />
						<input name="contact[name]" type="email" id="contact_email"  placeholder="Email/Số điện thoại"/>
						<button class="button btn-register">Đăng ký</button>
						{% if form.posted_successfully? %}
						<script>
						$(window).ready(function(){
							alert('Cám ơn bạn đã đăng ký email!');
						});
						</script>
						{%endif%}
						{%endform%}
					</div>
					{%endif%}
					{%if settings.footer_socials_show%}
					<ul class="footer-icon">
						<li><span>Follow us:</span></li>
						{%if settings.facebook%}
						<li><a href="{{settings.facebook_link}}" class="fb" target="_blank" rel="nofollow"><i class="fa fa-facebook-square"></i></a></li>
						{%endif%}
						{%if settings.google%}
						<li><a href="{{settings.google_link}}" class="gg" target="_blank" rel="nofollow"><i class="fa fa-google-plus"></i></a></li>
						{%endif%}
						{%if settings.youtube%}
						<li><a href="{{settings.youtube_link}}" class="yt" target="_blank" rel="nofollow"><i class="fa fa-youtube"></i></a></li>
						{%endif%}
						{%if settings.twitter%}
						<li><a href="{{settings.twitter_link}}" class="tw" target="_blank" rel="nofollow"><i class="fa fa-twitter"></i></a></li>
						{%endif%}
					</ul>
					{%endif%}
				</div>
			</div>
		</div>
	</div>
	{%if settings.footer_bottom_show%}
	<div class="footer-top2">
		<div class="container">
			<h4 class="top2-title">{{settings.footer_bottom_title}}</h4>
			<div class="clearfix footer-block">
				{% for i in (1..8) %}
				{% capture footer_bottom_i_show %}footer_bottom_{{i}}_show{% endcapture %}
				{% capture footer_bottom_i_link %}footer_bottom_{{i}}_link{% endcapture %}
				{% capture footer_bottom_i_title %}footer_bottom_{{i}}_title{% endcapture %}
				{% capture footer_bottom_i_menu %}footer_bottom_{{i}}_menu{% endcapture %}
				{% capture link_footer_bottom_i_menu %}{{ settings[footer_bottom_i_menu] }}{% endcapture %}
				{% if settings[footer_bottom_i_show] %}
				<div class="footer-col2" {% if forloop.index > 4 %}style="padding-top: 20px"{% endif %}>
					<h4 class="footer-title"><a href="{{ settings[footer_bottom_i_link] }}">{{ settings[footer_bottom_i_title] }}</a></h4>
					<div class="footer-menu style2">
						<ul>
							{%for link in linklists[link_footer_bottom_i_menu].links%}
							<li><a class="link-collection-footer" href="{{link.url}}" data-item="{{ link.object.products_count }}">{{link.title}}</a></li>
							{%endfor%}
						</ul>
					</div>
				</div>
				{%endif%}
				{% endfor %}
			</div>
		</div>
	</div>
	{%endif%}

</footer>
{%unless settings.footer_bct_txt1 == ''%}
<div class="footer-bottom">
	<div class="container">
		<div class="bottom_left text-center">			
			<p>{{settings.footer_bct_txt1}} <!-- -<a rel="nofollow" target="_blank" href="https://www.haratop.com">Developed by Haratop</a>--></p>		
		</div>
	</div>
</div>
{%endunless%}
<a href="#" class="scrollToTop">
	<img src="{{'scrolltop.jpg' | asset_url}}" alt="Back to top" />
</a>
{%if template contains 'product'%}
{{'jquery.mthumbnailscroller.js' | asset_url | script_tag}}
{%endif%}
