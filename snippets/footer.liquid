<script>
$(function(){
	$('.link-collection-footer').each(function(){
		if($(this).data('item') == 0){
			$(this).parent().remove();
		}
	})
	if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
		$('.footer-top .footer-title').addClass('collapsed');
		$('.footer-top .footer-menu').addClass('collapse');
	}else{
		$('.footer-top .footer-title').removeClass('collapsed');
		$('.footer-top .footer-menu').removeClass('collapse');
	}
})
</script>
